<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de la aplicaciÃ³n, estilo global-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema: texto rojo -->
    <style name="AppTheme.Red" parent="AppTheme">
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Tema: texto rojo -->
    <style name="AppTheme.Green" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">#FFFf0000</item>
    </style>

    <!-- Estilo para username y password-->
    <style name="AppTheme.EditTextStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

</resources>